<div class="banner" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= asset_path('drama_movies.jpg') %>)">
  <%= @list.name %>
</div>
<div class="container">
  <div class="row">
    <% @bookmarks.each do |bookmark| %>
      <div class="col-md-2 mb-4 mt-4">
        <div class="card h-100">
          <%= image_tag bookmark.movie.poster_url, class: "card-img-top", alt: bookmark.movie.title %>

          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><%= bookmark.comment %></p>
          </div>

          <div class="card-footer text-center">
            <%= link_to "Delete", bookmark_path(bookmark), data: { turbo_method: :delete, confirm: "Are you sure?" }, class: "btn btn-sm btn-danger" %>
          </div>
        </div>
      </div>
    <% end %>
  </div>

  <%=link_to "back to homepage", lists_path(@lists), class: "btn btn-primary btn-lg mt-4 w-5" %>
  <%= link_to "add movie", new_list_bookmark_path(@list), class: "btn btn-primary btn-lg mt-4 w-5" %>
</div>
